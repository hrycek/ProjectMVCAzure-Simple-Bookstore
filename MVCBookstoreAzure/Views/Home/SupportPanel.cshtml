@using MvcProject2.Models
@model MvcProject2.Models.MessageClass

@{
    ViewData["Title"] = "Support Panel";
}

<div >
    <h1 class="display-4 text-center" style="font-weight: 400; color:white;">Najstarsze pytanie w kolejce:</h1>
     <hr style="color:white; width: 100vh; margin-left: auto; margin-right: auto;"/>

    <div style="width: 100vh; margin-left: auto; margin-right: auto; border: 1px solid white; border-radius: 5px; padding: 10px; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19); background-color: white; opacity: 0.7;">
       <br />
        @{
            if(Model.message == "brak")
            {
               <center> <h1 style="color: black"> Aktualnie brak pytań w kolejce.</h1> </center>
            }
            else
            {
                <div style="background-color: #d1d1d1; min-width: 100%; padding: 10px; border-radius: 10px; opacity: 1; margin-top: auto; margin-bottom: auto;">
                    <h4>@Model.message</h4>
                <br>
                    <hr>
              
                    <h5 stlyle="margin-bottom: 5px;">Napisane przez: @Model.email</h5>
                </div>
                
               
            }
        }
        <br />
                
               
        @{
            if(Model.message == "brak")
            {

            }
            else
            {
                <button class="btn btn-success" id="reloadButton">Następne pytanie</button>
            }
        }
       
    </div>
    

   

  
</div>
<script>
    document.getElementById("reloadButton").addEventListener("click", myFunction);

    function myFunction(){
        console.log("click");
        location.reload();
    }
</script>
<script src="~/js/site.js"></script>
