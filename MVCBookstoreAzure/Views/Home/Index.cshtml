@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4" style="font-weight: 400; color:white;">Strona główna</h1>
    <br />
    <div style="height: 60vh">
    @{
        if(@ViewBag.CurrUser != null)
        {
                <h2 style="font-weight: 300; color: white; text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000;"> Witaj ponownie @ViewBag.CurrUser !</h2>
        }
        else
        {
                <h2 style="font-weight: 300; color: white; text-shadow: -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000;"> Zaloguj się aby móc przeglądać całą zawartość!</h2>
        }
    }
    </div>
</div>